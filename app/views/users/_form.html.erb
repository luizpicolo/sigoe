<%= form_for user, html: { class: "form" } do |f| %>
  <fieldset>
    <legend>Dados pessoais</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :name, 'Nome*', class: 'label' %>
            <%= f.text_field :name, class: 'input is-medium', placeholder: 'Nome', required: true %>
          </p>
        </div>
        <div class="field">
          <%= f.label :avatar, 'Imagem', class: 'label' %>
          <div class="file is-medium is-success">
            <label class="file-label">
              <%= f.file_field :avatar, class: 'file-input' %>
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fa fa-upload"></i>
                </span>
                <span class="file-label">
                  Selecione uma imagem
                </span>
              </span>
            </label>
          </div>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados Institucionais</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :email, 'Email*', class: 'label' %>
            <%= f.email_field :email, class: 'input is-medium', placeholder: 'Email', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :siape, 'SIAPE*', class: 'label' %>
            <%= f.text_field :siape, class: 'input is-medium', placeholder: 'SIAPE', required: true %>
          </p>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :polo_id, "Campus*", class: 'label' %>
            <span class="select is-medium">
              <%= f.select :polo_id, Polo.initials(current_user), {}, { class: '' } %>
            </span>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :course_id, "Coordenador?", class: 'label' %>
            <span class="select is-medium">
              <%= f.select :course_id, Course.initials(@params_return), { include_blank: 'Sem coordenação' }, { class: '' } %>
            </span>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados de acesso</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :username, 'Usuário*', class: 'label' %>
            <%= f.text_field :username, class: 'input is-medium', placeholder: 'Usuário', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :password, 'Senha', class: 'label' %>
            <%= f.password_field :password, class: 'input is-medium', placeholder: 'Senha' %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :password_confirmation, 'Repetir senha', class: 'label' %>
            <%= f.password_field :password_confirmation, class: 'input is-medium', placeholder: 'Confirmação senha' %>
          </p>
        </div>
        <div class="field vertical-center">
          <p class="control">
            <%= f.label :admin, 'Admin?', class: 'label' %>
            <%= f.check_box :admin %>
          </p>
        </div>
        <div class="field vertical-center">
          <p class="control">
            <%= f.label :status, 'Ativo?', class: 'label' %>
            <%= f.check_box :status %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <style>
  .vertical-center {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
  }
</style>

  <!-- Botão de Envio -->
  <div class="field margin-top-20px">
    <div class="control">
      <%= f.submit "Salvar", class: "button is-success is-medium" %>
    </div>
  </div>
<% end %>
