<%= form_for student do |f| %>
  <fieldset>
    <legend>Dados pessoais</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :name, "Nome", class: 'label' %>
            <%= f.text_field :name, class: 'input is-medium', placeholder: 'Nome', required: true %>
          </p>
        </div>
        <div class="field">
          <%= f.label :photo, 'Imagem', class: 'label' %>
          <div class="file is-medium is-success">
            <label class="file-label">
              <%= f.file_field :photo, class: 'file-input' %>
              <span class="file-cta">
                <span class="file-icon">
                  <i class="fa fa-upload"></i>
                </span>
                <span class="file-label">
                  Selecione a foto do estudante
                </span>
              </span>
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-body">

        <div class="field">
          <p class="control">
            <%= f.label :cpf, "CPF", class: 'label' %>
            <%= f.text_field :cpf, class: 'input is-medium cpf', placeholder: 'CPF', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :birth_date, "Data de Nascimento", class: 'label' %>
            <%= f.text_field :birth_date, class: 'input is-medium date', value: extract_and_format_date(student.birth_date), placeholder: 'Data de Nascimento', required: true %>
          </p>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :password, "Senha para assinatura digital", class: 'label' %>
            <%= f.password_field :password, class: 'input is-medium' %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :password_confirmation, "Confirmar senha", class: 'label' %>
            <%= f.password_field :password_confirmation, class: 'input is-medium' %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados responsável</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :responsible, "Responsável", class: 'label' %>
            <%= f.text_field :responsible, class: 'input is-medium', placeholder: 'Responsável' %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :responsible_contact, "Contato", class: 'label' %>
            <%= f.text_field :responsible_contact, class: 'input is-medium', placeholder: 'Email / Telefone' %>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Dados do Curso/Turma</legend>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :ra, "R.A", class: 'label' %>
            <%= f.text_field :ra, class: 'input is-medium', placeholder: 'R.A', required: true %>
          </p>
        </div>
        <div class="field">
          <p class="control">
            <%= f.label :enrollment, "Matrícula", class: 'label' %>
            <%= f.text_field :enrollment, class: 'input is-medium', placeholder: 'Matrícula', required: true %>
          </p>
        </div>
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <p class="control">
            <%= f.label :course_id, "Curso", class: 'label' %>
            <span class="select is-medium">
              <%= f.select :course_id, Course.initials, {}, { :style => "max-width: 480px" } %>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :school_group, 'Turma', class: 'label' %>
          <p class="control">
            <span class="select is-medium">
              <%= f.select :school_group_id, SchoolGroup.get_all, { prompt: "Turma" }, { :class => "" } %>
            </span>
          </p>
        </div>
        <div class="field">
          <%= f.label :course_situation, 'Situação do curso', class: 'label' %>
          <p class="control">
            <span class="select is-medium">
              <%= f.select :course_situation, Student.course_situations.keys.to_a, {}, { :style => "max-width: 300px" } %>
            </span>
          </p>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="margin-top-20px">
    <p class="control">
      <%= f.submit "Salvar", class: "button is-success is-medium in-mobile-expand"%>
    </p>
  </div>
<% end %>
