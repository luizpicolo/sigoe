<%= render 'layouts/head_devise' %>

<body class="devise">
  <%= render 'layouts/alerts' %>

	<section class="container">
		<div class="devise-logo">
      <%= image_tag '/ifms-cor.png', width: 120, alt: 'Instituto Federal de Mato Grosso do Sul' %>
    </div>

		<div class="devise-content">
  		<h1 class="title is-4 has-text-centered">SIGOE</h1>
      <h2 class="subtitle is-6 has-text-centered">Sistema para o gerenciamento de ocorrências escolares</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="devise-field">
			  	<%= f.label :username, 'Usuário' %>
			  	<%= f.text_field :username, autofocus: true, required: true %>
			  </div>

			  <div class="devise-field">
			  	<%= f.label :password, 'Senha' %>
			    <%= f.password_field :password, autocomplete: 'off', required: true %>
			  </div>

				<div class="row">
				  <% if devise_mapping.rememberable? -%>
				    <div class="devise-col devise-checkbox">
				    	<%= f.check_box :remember_me %>
				    	<%= f.label :remember_me, 'Lembrar-me' %>
				    </div>
				  <% end -%>

				  <div class="devise-col devise-submit">
				  	<%= f.submit 'Entrar', class: 'devise-btn button is-success' %>
				  </div>
			  </div>
			<% end %>
		</div>

		<div class="devise-copy">
			<div>Instituto Federal de Mato Grosso do Sul<br> SIGOE - <%= @version['version'] %></div>
		</div>
	</section>
</body>
